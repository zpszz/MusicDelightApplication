<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.main.home.HomeFragment">

    <data>

    </data>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:id="@+id/ll_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="16dp">
                <com.youth.banner.Banner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="128dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginHorizontal="16dp"
                    app:banner_radius="12dp"
                    app:banner_indicator_selected_color="@color/color_primary"
                    app:banner_indicator_normal_color="@color/_cccccc"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_recommendSongDaily"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:drawableTopCompat="@drawable/ic_recommend"
                        android:drawablePadding="2dp"
                        app:drawableTint="@color/color_primary"
                        android:gravity="center_horizontal"
                        android:text="@string/recommend_song_daily"
                        android:textColor="@color/common_text_h1_color"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/tv_privateFm"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:drawableTopCompat="@drawable/ic_radio"
                        android:drawablePadding="2dp"
                        app:drawableTint="@color/color_primary"
                        android:gravity="center_horizontal"
                        android:text="@string/private_fm"
                        android:textColor="@color/common_text_h1_color"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/tv_playListSquare"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:drawableTopCompat="@drawable/ic_discovery_playlist"
                        android:drawablePadding="2dp"
                        app:drawableTint="@color/color_primary"
                        android:gravity="center_horizontal"
                        android:text="@string/play_list_square"
                        android:textColor="@color/common_text_h1_color"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/tv_rankingList"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:drawableTopCompat="@drawable/ic_discovery_rank"
                        android:drawablePadding="2dp"
                        app:drawableTint="@color/color_primary"
                        android:gravity="center_horizontal"
                        android:text="@string/ranking_list"
                        android:textColor="@color/common_text_h1_color"
                        android:textSize="12sp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_recommendPlaylistMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    app:drawableEndCompat="@drawable/ic_arrow_right"
                    app:drawableTint="@color/common_text_h1_color"
                    android:text="@string/recommend_play_list"
                    android:textColor="@color/common_text_h1_color"
                    android:textSize="17sp"
                    android:textStyle="bold"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_recommendPlayList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:clipToPadding="false"
                    android:paddingHorizontal="16dp"
                    tools:itemCount="1"
                    tools:listitem="@layout/item_recommend_play_list"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</layout>